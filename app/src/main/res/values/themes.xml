<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LabelTextStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/cp_1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="UnitTextStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/cp_1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="ValueTextStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/cp_1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyProgressDialog" parent="@style/Theme.MaterialComponents.DayNight.Dialog">
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:background">@drawable/rounded_bg_white_16</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="RatingBar" parent="AppTheme">
        <item name="colorControlActivated">#4361AA</item>
        <item name="colorControlNormal">#799DF8</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.DayNight.Dialog">
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:background">@drawable/rounded_bg_white_8</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="RoundedCornersDialog80" parent="@style/Theme.MaterialComponents.DayNight.Dialog">
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:background">@drawable/rounded_bg_white_8</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/up_slide</item>
        <item name="android:windowExitAnimation">@anim/bottom_slide</item>
    </style>

    <style name="Icon">
        <item name="android:shadowColor">@color/black_translucent2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="RoundedTabLayoutStyleAccent" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_selector_accent</item>
        <item name="tabIndicator">@null</item>
        <!--        <item name="android:background">@drawable/tab_layout_bg</item>-->
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
    </style>

    <style name="RoundedTabLayoutStyleWA" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_selector_wa</item>
        <item name="tabIndicator">@null</item>
        <!--        <item name="android:background">@drawable/tab_layout_bg</item>-->
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
    </style>

    <style name="TabTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeableImageView50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeableImageView8" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="PlayButton">
        <item name="android:src">@drawable/play</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>

    <style name="PauseButton">
        <item name="android:src">@drawable/pauseexo</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>

    <style name="RewindButton">
        <item name="android:src">@drawable/previos</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/exo_controls_rewind_description</item>
    </style>

    <style name="FastForwardButton">
        <item name="android:src">@drawable/nextvid</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/exo_controls_fastforward_description</item>
    </style>

    <style name="SeekBaStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">56dp</item>
        <item name="android:layout_marginRight">56dp</item>
        <item name="android:thumb">@drawable/custom_thumb</item>
        <item name="android:splitTrack">false</item>
    </style>
</resources>